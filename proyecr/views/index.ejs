<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lista de Usuarios</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1>Lista de Usuarios</h1>
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Correo</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>
            <a href="/edit/<%= user.id %>">Editar</a> | 
            <a href="/delete/<%= user.id %>">Eliminar</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <br>
  <a href="/add">Agregar Usuario</a>
</body>
</html>
